@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Overview";
}

@section Styles {
    <style>
        .indented-row th {
            padding-left: 40px; /* Atur nilai sesuai keinginan untuk memberi efek tab */
        }

        th.sorting_asc {
            display: none;
        }

        td.dataTables_empty {
            display: none;
        }

        .dataTable_length {
            display: none;
        }
    </style>
}

<div id="loadingContent" class="container-xxl flex-grow-1 container-p-y d-none">
    <div class="card">
        <div class="card-body text-center">
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<div id="contentPage" class="container-xxl flex-grow-1 container-p-y">
    @* <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page /</span> <span class="text-muted fw-light">Konsolidasi /</span> Overview</h4> *@
    <h4 class="fw-bold py-3 mb-4"><span>RJPP /</span> Konsolidasi</h4>
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <div class="head-label text-center my-auto">
                <h5 class="card-title mb-0"></h5>
            </div>
            <div class="dt-action-buttons text-end pt-3 pt-md-0">
                <div class="dt-buttons">
                    <a id="btnNew" class="dt-button create-new btn btn-primary" asp-area="Page" asp-controller="InputKonsolidasi" asp-action="Index">
                        <span>
                            @* <i class="bx bx-plus me-sm-2"></i> *@
                            <span class="d-none d-sm-inline-block">Input Konsolidasi</span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="card-datatable table-responsive text-nowrap">
                <div class="loader" style="display: none;">Loading...</div>

                <table id="dataTable" class="table table-bordered" style="width: 100%;">
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/demo/dataTable-demos.js"></script>
    <script src="~/js/pages/Konsolidasi/Konsolidasi.js"></script>
}