<div class="row">
    <div class="col-12">
        <div class="content-header pb-3 border-bottom d-flex justify-content-between">
            <div class="col-auto">
                <h6 class="mb-0">Header Parameter (Indicator)</h6>
                <small>Enter Parementer Header Details.</small>
            </div>
            <div class="col-auto">
                <button id="btnModalHeaderParameter" class="btn btn-label-primary" data-bs-toggle="modal" data-bs-target="#addHeaderParamsModal">
                    <i class="bx bx-plus"></i>
                    <span class="align-middle">Add</span>
                </button>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12 mb-2">
                <div class="table-responsive text-start text-nowrap">
                    <table id="table-header-parameter" class="table">
                        <thead>
                            <tr>
                                <th style="width: 3%">ID</th>
                                <th>Seq</th>
                                <th>Aspek</th>
                                <th style="width: 15%">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="contentParams" class="col-12 mt-2">
        <div class="content-header pb-3 border-bottom">
            <h6 class="mb-0">Content Parameter</h6>
            <small>Enter Parementer Content Details.</small>
        </div>
        <div class="row g-3">
            <div class="col-12 mb-2">
                <div class="table-responsive text-start">
                    <table id="table-content-parameter" class="table">
                        <thead>
                            <tr>
                                <th style="width: 2%">ID</th>
                                <th>HeaderId</th>
                                <th>Aspek</th>
                                <th>Parameter Description</th>
                                <th style="width: 10%">Bobot</th>
                                <th style="width: 15%">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="w-100 mt-4 d-flex justify-content-between">
        <button class="btn btn-label-secondary btn-prev" disabled="">
            <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
            <span class="align-middle d-sm-inline-block d-none">Previous</span>
        </button>
        <button id="btnParameterDetailsNext" class="btn btn-primary btn-next btn-next-fuk">
            <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
            <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
        </button>
    </div>
</div>

<!-- Modal Header Parameter -->
<div class="modal fade" id="addHeaderParamsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="form-header-parameter" class="add-new-user pt-0 row g-2 fv-plugins-bootstrap5 fv-plugins-framework need-validation" id="form-add-new-record" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title" id="addModalLabel">
                        <i class="bx bx-user-plus me-1"></i>
                        Add Header Parameters (Indicator)
                    </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12 mb-1">
                        <label class="form-label" for="Aspek">Aspek Header Parameter (Indicator)</label>
                        <input type="text" id="Aspek" name="Aspek" class="form-control" placeholder="Type aspek ...">
                    </div>
                    <div class="col-sm-12 mb-1">
                        <label class="form-label" for="Bobot">Bobot Parameter</label>
                        <input type="text" id="Bobot" name="Bobot" class="form-control" placeholder="Type bobot ...">
                    </div>
                    <div class="col-sm-12 mb-1">
                        <label class="form-label" for="Description">Parameter Description</label>
                        <textarea cols="5" id="Description" name="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnAddParamater" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editHeaderParamsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="form-header-parameter-edit" class="add-new-user pt-0 row g-2 fv-plugins-bootstrap5 fv-plugins-framework need-validation" id="form-add-new-record" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title" id="addModalLabel">
                        <i class="bx bx-user-plus me-1"></i>
                        Edit Header Parameters (Indicator)
                    </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12 mb-1">
                        <label class="form-label" for="Aspek">Aspek Header Parameter (Indicator)</label>
                        <input type="text" id="aspek-edit" name="aspek" class="form-control" placeholder="Type aspek ...">
                        <input type="hidden" id="header-id" name="header-id">
                        <input type="hidden" id="header-seq" name="header-seq">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnEditParamater" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

