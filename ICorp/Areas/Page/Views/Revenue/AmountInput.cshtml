@{
    ViewData["Title"] = "Revenue List";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/5.0.4/css/fixedColumns.dataTables.css">
    <style>
        th, td {
            white-space: nowrap;
        }

        div.dataTables_wrapper {
            width: 800px;
            margin: 0 auto;
        }

        .table-input {
            width: 150px; /* Atur lebar sesuai kebutuhan, misalnya 100px */
            text-align: right; /* Menjadikan angka rata kanan */
            box-sizing: border-box; /* Memastikan padding tidak menambah ukuran */
        }
        .subtotal{
            text-align: right !important;
        }
    </style>
}

<div id="contentPage" class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page /</span> <span class="text-muted fw-light">Revenue /</span> Input Amount</h4>
    <div class="card">

        <div class="card-body p-3">
            <div class="row align-items-center mb-3">
                <input type="hidden" id="idHeader" name="IDHeader" />

                <!-- Kolom untuk label dan input Tahun -->
                <div class="col-sm-12 col-md-4 d-flex align-items-center">
                    <label class="form-label me-6" for="tahunBerjalanRev">Tahun RKAP</label>
                    <input type="text" id="tahunBerjalanRev" name="tahunBerjalan" class="form-control" required />
                </div>
            </div>
            <div class="text-end mt-3">
                <button id="saveChangesButton" class="btn btn-primary">Submit Amount</button>
            </div>
            <table id="fixedTable">
                <thead>
                    <tr>
                        <th>Project</th>
                        <th>Januari</t>
                        <th>Februari</th>
                        <th>Maret</th>
                        <th>April</th>
                        <th>Mei</th>
                        <th>Juni</th>
                        <th>Juli</th>
                        <th>Agustus</th>
                        <th>September</th>
                        <th>Oktober</th>
                        <th>November</th>
                        <th>Desember</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                   
                </tbody>
                <tfoot>
                    <tr>
                        <th>Sub Total</th>
                        <th id="janAmount" class="subtotal"></th>
                        <th id="febAmount" class="subtotal"></th>
                        <th id="marAmount" class="subtotal"></th>
                        <th id="aprAmount" class="subtotal"></th>
                        <th id="meiAmount" class="subtotal"></th>
                        <th id="junAmount" class="subtotal"></th>
                        <th id="julAmount" class="subtotal"></th>
                        <th id="augAmount" class="subtotal"></th>
                        <th id="sepAmount" class="subtotal"></th>
                        <th id="oktAmount" class="subtotal"></th>
                        <th id="novAmount" class="subtotal"></th>
                        <th id="desAmount" class="subtotal"></th>
                        <th id="totalAmount" class="subtotal"></th>
                    </tr>
                </tfoot>
            </table>
            
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/pages/Revenue/amount-input.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/5.0.4/js/dataTables.fixedColumns.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/5.0.4/js/fixedColumns.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#fixedTable').DataTable({
                fixedColumns: {
                    start: 0,
                    end: 0
                },
                searching: false,
                paging: false,
                scrollCollapse: true,
                scrollX: true,
                scrollY: 300
            });
        });
    </script>
}
