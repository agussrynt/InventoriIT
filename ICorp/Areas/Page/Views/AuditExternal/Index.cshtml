
@{
    ViewData["Title"] = "Index";
}

<div id="loadingContent" class="container-xxl flex-grow-1 container-p-y d-none">
    <div class="card">
        <div class="card-body text-center">
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<div id="contentPage" class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page /</span> <span class="text-muted fw-light">Audit External /</span> List</h4>
    <div class="card">
        <div class="card-header d-flex">
            <div class="dt-action-buttons text-end me-2 pt-3 pt-md-0">
                <div class="dt-buttons"> 
                    <a id="btnNew" class="dt-button create-new btn btn-primary text-white" asp-area="Page" asp-controller="AuditExternal" asp-action="Create">
                        <span>
                            <i class="bx bx-plus me-sm-2"></i> 
                            <span class="d-none d-sm-inline-block">Add New Record</span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-datatable table-responsive text-nowrap">
            <table id="dataTable" class="table no-footer">
                <thead>
                    <tr class="text-nowrap">
                        <th>Auditor Name</th>
                        <th>Total Score</th>
                        <th>Date</th>
                        <th>Recomendation Upload</th>
                        <th>File Attachment</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
