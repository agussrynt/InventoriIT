@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "FUK Assignment Detail";
}

<div id="loadingContent" class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-body text-center">
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="spinner-grow text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

<div id="contentPage" class="container-xxl flex-grow-1 container-p-y d-none">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page /</span> <span class="text-muted fw-light">Fuk Assignment /</span> Template <span id="yearData"></span></h4><div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title m-0 me-2">FUK Assignment Filter</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label for="Indikator" class="form-label">Indikator</label>
                            <div class="position-relative">
                                <select id="Indikator" name="Indikator" class="form-select form-select-lg select2">
                                    <option value="" disabled></option>
                                </select>
                            </div>
                        </div>
                        <div id="paramsSelect" class="col-12 mb-3 d-none">
                            <label for="Parameter" class="form-label">Parameter</label>
                            <select id="Parameter" name="Parameter" class="form-select select2">
                                <option value="" disabled></option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button id="btnShow" class="btn btn-primary">ShowData</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="tableData" class="col-12 mt-3 d-none">
            <div class="card">
                <div class="card-datatable table-responsive">
                    <table id="dataTable" class="table no-footer">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Seq</th>
                                <th>Child</th>
                                <th>Faktor Uji Kesesuaian (FUK)</th>
                                <th>Assignment For</th>
                                <th>Due Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Assignment  -->
<div class="modal fade" id="setAssignment" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="setAssignment" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="form-set-assignment" class="add-new-user pt-0 row g-2 fv-plugins-bootstrap5 fv-plugins-framework need-validation" id="form-add-new-record" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title" id="addModalLabel">
                        <i class="bx bx-user-plus me-1"></i>
                        Set FUK Assignment
                    </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="Id" name="Id" class="form-control" />
                    <div class="col-sm-12 mb-2">
                        <label class="form-label" for="Description">Faktor Uji Kesesuaian</label>
                        <textarea cols="5" id="Description" name="Description" class="form-control" readonly></textarea>
                    </div>
                    <div class="col-sm-12 mb-2">
                        <label class="form-label" for="DueDate">Due Date</label>
                        <input type="date" id="DueDate" name="DueDate" class="form-control" required />
                    </div>
                    <div class="col-sm-12 mb-2">
                        <label class="form-label" for="Assignment">Fungsi Assignment</label>
                        <div class="position-relative">
                            <select class="form-select" id="Assignment" name="Assignment" required>
                                <option value="" disabled></option>
                            </select>
                        </div>
                    </div>
                    <div id="userPic" class="col-sm-12 mb-2 d-none">
                        <label class="form-label" for="PIC">User PIC</label>
                        <div class="position-relative">
                            <select class="form-select" id="PIC" name="PIC" required>
                                <option value="" disabled></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnSetAssignment" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/FUKAssigment/list-fuk-assignment.js"></script>
}